<resources>

    <style name="FrameworkRoot.Theme" parent="Theme.AppCompat.NoActionBar" />

    <style name="Theme.Tinder.Base" parent="FrameworkRoot.Theme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="Theme.Tinder" parent="Theme.Tinder.Base" />

    <style name="Theme.Tinder.WithNavDrawer" parent="Theme.Tinder" />

    <style name="Theme.Tinder.MainActivity" parent="Theme.Tinder.WithNavDrawer">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Tinder.SettingsActivity" parent="Theme.Tinder" />

    <style name="TinderJs.Toolbar.Style" parent="">
        <item name="android:elevation">@dimen/action_bar_elevation</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="android:background">@color/primary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

</resources>